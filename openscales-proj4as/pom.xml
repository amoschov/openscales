<?xml version="1.0"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.openscales</groupId>
	<artifactId>openscales-proj4as</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>swc</packaging>
	<name>Light projection support</name>
	
	<parent>
		<groupId>org.openscales</groupId>
		<artifactId>openscales</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>

	<profiles>
		<profile>
            <id>flex-mvn-report</id>
			<build>
				<plugins>
					<plugin>
				        <groupId>net.sf.flex-mvn-report</groupId>
				        <artifactId>flex-mvn-report</artifactId>
						<configuration>
							<sourceDir>${project.build.sourceDirectory}</sourceDir>
						</configuration>
				    </plugin>
				</plugins>
			</build>
			<reporting>
				<plugins>
					<plugin>
						<groupId>net.sf.flex-mvn-report</groupId>
						<artifactId>flex-mvn-report</artifactId>
						<configuration>
							<sourceDir>${project.build.sourceDirectory}</sourceDir>
						</configuration>
					</plugin>
				</plugins>
			</reporting>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<version>${flexmojos.version}</version>
				<executions>
					<execution>
			            <goals>
							<goal>asdoc</goal>
			            </goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
