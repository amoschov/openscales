<?xml version="1.0" encoding="utf-8"?>
<control:Control xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:control="org.openscales.component.control.*">
	
	<mx:Script>
		<![CDATA[
			
			public var DELTA_PX:Number = 100; // TODO: should be an attribute of the control and depending on the size of the map by default
						
			public function onButtonClick(event:MouseEvent):void {
				if(event.currentTarget==this.upButton) {
					this.map.pan(0, -this.DELTA_PX, true);
				}
				else if(event.currentTarget==this.rightButton) {
					this.map.pan(this.DELTA_PX, 0, true);
				}
				else if(event.currentTarget==this.downButton) {
					this.map.pan(0, this.DELTA_PX, true);
				}
				else if(event.currentTarget==this.leftButton) {
					this.map.pan(-this.DELTA_PX, 0, true);
				}
			}
		]]>
	</mx:Script>
	
	<mx:Grid horizontalGap="1" verticalGap="1" >
		<mx:GridRow height="100%" width="100%">
			<mx:GridItem width="100%" height="100%"/>
			<mx:GridItem width="100%" height="100%">
				<mx:Button id="upButton"
					upSkin="@Embed('/org/openscales/component/images/mapPanNorth-upskin.swf')"
					overSkin="@Embed('/org/openscales/component/images/mapPanNorth-upskin.swf')"
					downSkin="@Embed('/org/openscales/component/images/mapPanNorth-upskin.swf')"
					disabledSkin="@Embed('/org/openscales/component/images/mapPanNorth-upskin.swf')"
					click="this.onButtonClick(event)" label="Up" height="20" width="20"/>
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%"/>
		</mx:GridRow>
		<mx:GridRow height="100%" width="100%">
			<mx:GridItem width="100%" height="100%">
				<mx:Button id="leftButton"
					upSkin="@Embed('/org/openscales/component/images/mapPanEast-upskin.swf')"
					overSkin="@Embed('/org/openscales/component/images/mapPanEast-upskin.swf')"
					downSkin="@Embed('/org/openscales/component/images/mapPanEast-upskin.swf')"
					disabledSkin="@Embed('/org/openscales/component/images/mapPanEast-upskin.swf')"
					click="this.onButtonClick(event)" label="Left" height="20" width="20"/>	
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%"/>
			<mx:GridItem width="100%" height="100%">
				<mx:Button id="rightButton"
					upSkin="@Embed('/org/openscales/component/images/mapPanWest-upskin.swf')"
					overSkin="@Embed('/org/openscales/component/images/mapPanWest-upskin.swf')"
					downSkin="@Embed('/org/openscales/component/images/mapPanWest-upskin.swf')"
					disabledSkin="@Embed('/org/openscales/component/images/mapPanWest-upskin.swf')"
					click="this.onButtonClick(event)" label="Right" height="20" width="20"/>	
			</mx:GridItem>
		</mx:GridRow>
		<mx:GridRow height="100%" width="100%">
			<mx:GridItem width="100%" height="100%"/>
			<mx:GridItem width="100%" height="100%">
				<mx:Button id="downButton"
					upSkin="@Embed('/org/openscales/component/images/mapPanSouth-upskin.swf')"
					overSkin="@Embed('/org/openscales/component/images/mapPanSouth-upskin.swf')"
					downSkin="@Embed('/org/openscales/component/images/mapPanSouth-upskin.swf')"
					disabledSkin="@Embed('/org/openscales/component/images/mapPanSouth-upskin.swf')"
					click="this.onButtonClick(event)" label="Down" height="20" width="20"/>	
			</mx:GridItem>
			<mx:GridItem width="100%" height="100%"/>
		</mx:GridRow>
	</mx:Grid>
	
</control:Control>
