				}
			} */
			
			/* public function onPointClick(event:Event):void {
				if(drawType != "point") {
					drawType = "point";
					pointHandler.active = true;
					
					btnPath.enabled = false;
					btnPolygon.enabled = false;
				}
				else {
					drawType = "";
