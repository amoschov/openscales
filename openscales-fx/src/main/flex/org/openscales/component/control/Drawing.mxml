				if(drawType != "path"){
					drawType = "path";
					pathHandler.active = true;
					
					btnPoint.enabled = false;
					btnPolygon.enabled = false;
				}
				else {
					drawType = "";
					pathHandler.active = false;
					btnPoint.enabled = true;
					btnPolygon.enabled = true;
				}
			} */
			
