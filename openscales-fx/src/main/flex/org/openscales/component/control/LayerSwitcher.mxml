<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml">

	<mx:Script>
		<![CDATA[
			public function layerName(data:Object):String{
				
				return data.name;
			}
			
			public function layerVisible(data:Object):void
			{
				data.visible = !data.visible;
				displayControl.selected = this.data.visible;
			}
			
			public function layerOpacity(data:Object):void
			{
				data.alpha = opacityControl.value;
			}
		]]>
	</mx:Script>

	<mx:CheckBox id="displayControl" width="100%" height="100%" label="{layerName(this.data)}"	selected="{this.data.visible}" change="layerVisible(this.data)"/>
	<mx:HBox width="100%">		
		<mx:Label text="OpacitÃ©"/>
		<mx:HSlider width="50%" id="opacityControl" minimum="0" maximum="1" labels="{['0%','100%']}" value="{data.alpha}" liveDragging="true" change="layerOpacity(this.data)"/>
	</mx:HBox>


	
</mx:VBox>

