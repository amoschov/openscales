<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml"
		   xmlns:os="http://openscales.org"
		   creationComplete="initMap()">
	<mx:Script>
		<![CDATA[
			import org.openscales.core.Map;

			[Bindable] private var map:Map; // Fixme : on devrait pouvoir binder directement Map.map
			
			private function initMap():void {
				map = fxmap.map;
				resizeOverView();
			}
			
			private function resizeOverView():void {
				miniMap.height = 0.2 * this.height;
				miniMap.width = this.width * miniMap.height / this.height;
				miniMap.x = this.width - miniMap.width;
				miniMap.y = this.height - miniMap.height;
			}
			
			private function toggleOverView():void {
				miniMap.visible = ! miniMap.visible;
			}
		]]>
	</mx:Script>

	<os:Map id="fxmap" width="100%" height="100%"
		zoom="5" lon="538850.47459" lat="5740916.1243"
		resize="resizeOverView();">

		<!-- A EPSG:900913 baselayer (OSM) -->
		<os:Mapnik name="Mapnik"
			numZoomLevels="20"
			isBaseLayer="true"
			proxy="http://openscales.org/proxy.php?url="
			maxExtent="-20037508.34,-20037508.34,20037508.34,20037508.34"
			minResolution="0.5971642833709717"
			maxResolution="156543.0339" />

		<os:ClickHandler />
		<os:WheelHandler />
		<os:DragHandler />

	</os:Map>

	<mx:VBox horizontalAlign="center" x="10" y="10">
		<os:PanComponent map="{map}" />
		<os:ZoomBoxComponent map="{map}" click="toggleOverView();" />
	</mx:VBox>

	<os:OverviewMapComponent id="miniMap" map="{map}" />

</mx:Canvas>
